{
    "variables": {
        "source_ami_id": "",
        "aws_region": "cn-north-1"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "ami_name": "heptio-k8s-etcd0-centos-{{timestamp}}",
            "instance_type": "t2.micro",
            "source_ami": "{{user `source_ami_id`}}",
            "ssh_username": "centos",
            "security_group_id": "sg-6e39c609",
            "ssh_keypair_name": "tectonic-installer",
            "ssh_private_key_file": "tectonic-installer.pem"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "selinux_config",
            "destination": "/tmp/selinux_config"
        },
        {
            "type": "shell",
            "script": "./install_etcd_centos.sh"
        },
        {
            "type": "file",
            "source": "bootstrap_etcd0.sh",
            "destination": "/tmp/bootstrap_etcd0.sh"
        },
        {
            "type": "file",
            "source": "bootstrap-etcd0.service",
            "destination": "/tmp/bootstrap-etcd0.service"
        },
        {
            "type": "shell",
            "script": "./move_files.sh",
            "environment_vars": "ROLE=etcd0"
        }
    ]
}

